{
  "openapi": "3.1.0",
  "info": {
    "title": "Movie Finder MCP Server",
    "description": "Search TMDB for movies and return compact interactive results",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://movie-finder-mcp-production.up.railway.app",
      "description": "Movie Finder MCP Server"
    }
  ],
  "paths": {
    "/mcp/messages": {
      "post": {
        "operationId": "handleMcpMessage",
        "summary": "MCP Message Handler",
        "description": "Handle MCP tool calls for movie search and details",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tool": {
                    "type": "string",
                    "enum": ["search_movies", "movie_details"],
                    "description": "The tool to execute: 'search_movies' for searching movies, 'movie_details' for getting detailed info"
                  },
                  "input": {
                    "type": "object",
                    "description": "Input parameters for the tool",
                    "properties": {
                      "query": {
                        "type": "string",
                        "description": "Search query for movies (used with search_movies tool)"
                      },
                      "limit": {
                        "type": "integer",
                        "description": "Maximum number of results to return (used with search_movies tool)",
                        "default": 5,
                        "minimum": 1,
                        "maximum": 10
                      },
                      "id": {
                        "type": "integer",
                        "description": "TMDB movie ID (used with movie_details tool)"
                      }
                    }
                  }
                },
                "required": ["tool"]
              },
              "examples": {
                "search_movies": {
                  "summary": "Search for movies",
                  "value": {
                    "tool": "search_movies",
                    "input": {
                      "query": "batman",
                      "limit": 5
                    }
                  }
                },
                "movie_details": {
                  "summary": "Get movie details",
                  "value": {
                    "tool": "movie_details",
                    "input": {
                      "id": 268
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Response status"
                    },
                    "tool": {
                      "type": "string",
                      "description": "The tool that was executed"
                    },
                    "results": {
                      "type": "array",
                      "description": "Array of movie search results",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "TMDB movie ID"
                          },
                          "title": {
                            "type": "string",
                            "description": "Movie title"
                          },
                          "year": {
                            "type": "string",
                            "description": "Release year"
                          },
                          "overview": {
                            "type": "string",
                            "description": "Movie plot summary"
                          },
                          "score": {
                            "type": "number",
                            "description": "Average rating score"
                          }
                        }
                      }
                    },
                    "details": {
                      "type": "object",
                      "description": "Detailed movie information",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "description": "TMDB movie ID"
                        },
                        "title": {
                          "type": "string",
                          "description": "Movie title"
                        },
                        "year": {
                          "type": "string",
                          "description": "Release year"
                        },
                        "overview": {
                          "type": "string",
                          "description": "Movie plot summary"
                        },
                        "runtime": {
                          "type": "integer",
                          "description": "Movie runtime in minutes"
                        },
                        "genres": {
                          "type": "array",
                          "description": "List of movie genres",
                          "items": {
                            "type": "string"
                          }
                        },
                        "score": {
                          "type": "number",
                          "description": "Average rating score"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
